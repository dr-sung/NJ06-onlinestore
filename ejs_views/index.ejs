<!DOCTYPE html>
<html lang="en">
    <head><title><%= store_title %></title></head>
    <body>
        <h1>Welcome to <%= store_title %>!</h1>

        <table>
            <% for (const book of books) { %>
            <tr>
                <td> <%= book.title %> </td>
                <td> <%= book.author %> </td>
                <td> <%= book.price %> </td>
                <td> <img src='<%= book.image_path %>' width=100 height=100> </td>
                <td>
                    <form action='/add' method='post'>
                        <input type='hidden' name='id' value='<%= book.id %>'>
                        <input type='submit' value='Add to Cart'>
                    </form>
                </td>
            </tr>
            <% } %>
        </table>
    </body>
</html>