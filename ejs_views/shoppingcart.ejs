<!DOCTYPE html>
<html lang="en">
    <head><title>Shopping Cart</title></head>
    <body>
        <h1>Shopping Cart Contents</h1>

        <table border=1>
            <tr>
                <th></th>
                <th>Title</th>
                <th>Author</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
            <%  for (const item of shoppingcart.cart ) { %>
                <tr>
                    <td> <img src='<%= item.book.image_path %>' width=100 height=100> </td>
                    <td> <%= item.book.title %> </td>
                    <td> <%= item.book.author %> </td>
                    <td align="right"> $<%= item.book.price %> </td>
                    <td align="center"> <%= item.qty %> </td>
                    <td align="right"> $<%= (item.book.price*item.qty).toFixed(2) %> </td>
                </tr>
                <% } %>
                <tr>
                    <td align="right" colspan="5">TOTAL</td>
                        <td align="right">$<%= shoppingcart.totalPrice.toFixed(2) %></td>
                </tr>
            </table>
            <br><br>
            <a href='/'>Continue shopping</a><br>
            <a href='/checkout'>Check Out</a>
    </body>
</html>